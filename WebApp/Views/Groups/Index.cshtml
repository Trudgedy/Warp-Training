@model IEnumerable<Library.Data.Models.Common.GroupModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="MyTable">
    <thread>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thread>
    
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.GroupId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.GroupId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.GroupId })
                </td>
            </tr>

        }
    </tbody>
</table>
@section scripts{
    @Scripts.Render("~/bundles/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#MyTable').DataTable();
            window.alert("Does this work");
        });
        
</script>
    
